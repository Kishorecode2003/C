#include <stdio.h>
#include<math.h>
int Greatest(int x, int y,int z)
{
    if((x>y) && (x>z))
    {
        return x;
    }
    else if((y>x) && (y>z))
    {
        return y;
    }
    else
    {
        return z;
    }
}
int main() {
    int n1,n2,n3;
    printf("Enter the number 1: ");
    scanf("%d",&n1);
    printf("Enter the number 2: ");
    scanf("%d",&n2);
    printf("Enter the number 3: ");
    scanf("%d",&n3);
    Greatest(n1,n2,n3);
    int res=Greatest(n1,n2,n3);
    printf("%d",res);
    return 0;
}
